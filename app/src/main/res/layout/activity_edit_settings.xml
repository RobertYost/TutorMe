<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="@string/action_settings"
                android:textColor="#030000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--      TODO: Change this avatar to the profile picture      -->
            <ImageView
                android:id="@+id/profilePicImgView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/draw_profile_pic_desc"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/firstNameLbl"
                android:textColor="#030000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_settings_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/firstNamePlaceholder"
                android:inputType="textPersonName" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/lastNameLbl"
                android:textColor="#030000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_settings_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/lastNamePlaceholder"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/emailLbl"
                android:textColor="#030000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_settings_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/emailPlaceholder"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/schoolLbl"
                android:textColor="#030000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_settings_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/edit_school_placeholder" />

            <Button
                android:id="@+id/edit_school_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/edit_select_school" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/profile_picture_url"
                android:textColor="#030000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_settings_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/edit_settings_url_placeholder"
                android:layout_marginStart="16dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textUri" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/edit_settings_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/save_button" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>