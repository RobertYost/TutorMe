<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/books"
    android:backgroundTint="#81D6D7D7"
    android:backgroundTintMode="src_over"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4B8396"
        android:orientation="vertical">

        <TextView
            android:id="@+id/banner_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:drawableStart="@drawable/menu_book_white"
            android:drawablePadding="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TutorMe"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/create_account"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#4D8598"
            android:fontFamily="sans-serif"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/facebook_log_in"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#3F5BA9"
            android:fontFamily="sans-serif"
            android:text="log in with facebook"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F9F9F9"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>